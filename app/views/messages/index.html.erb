<p id="notice"><%= notice %></p>

<h1>Mensagens</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= link_to 'Mostrar', message %></td>
        <td><%= link_to 'Editar', edit_message_path(message) %></td>
        <td><%= link_to 'Deletar', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Mensagem', new_message_path %>
